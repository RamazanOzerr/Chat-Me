<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/linear_bottom4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linear_bottom3"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="C"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="()"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="%"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="/"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_bottom3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linear_bottom2"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="7"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="8"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="9"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="x"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_bottom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linear_bottom1"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="4"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="5"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="6"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="-"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear_bottom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linear_bottom"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="1"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="2"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="3"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="+"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="+/-"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="."
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_shape"
            android:text="="
            android:textColor="@color/red"
            android:textSize="32sp"
            android:layout_margin="8dp"
            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>