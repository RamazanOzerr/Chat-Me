<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/azure"
    tools:context=".Activities.UserProfileDesign">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sign_up_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/sign_up_profile_image"
            app:layout_constraintEnd_toEndOf="@id/sign_up_profile_image"
            app:layout_constraintTop_toBottomOf="@id/sign_up_profile_image"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="name"
            android:textColorHint="@color/blue_toolbar"
            android:textStyle="bold"
            android:textColor="@color/blue_toolbar"
            android:id="@+id/sign_up_name"
            android:textSize="22sp"
            />

        <EditText
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="@id/sign_up_name"
            app:layout_constraintEnd_toEndOf="@id/sign_up_name"
            app:layout_constraintTop_toBottomOf="@id/sign_up_name"
            android:layout_marginTop="20dp"
            android:id="@+id/sign_up_user_name"
            android:textColorHint="@color/blue_toolbar"
            android:textStyle="italic"
            android:textColor="@color/blue_toolbar"
            android:hint="username"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="@id/sign_up_user_name"
            app:layout_constraintEnd_toEndOf="@id/sign_up_user_name"
            app:layout_constraintTop_toBottomOf="@id/sign_up_user_name"
            android:layout_marginTop="20dp"
            android:hint="about me"
            android:minHeight="100dp"
            android:maxHeight="300dp"
            android:lines="5"
            android:id="@+id/sign_up_about_me"
            android:textColorHint="@color/blue_toolbar"
            android:textStyle="italic"
            android:textColor="@color/blue_toolbar"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/sign_up_setBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue_toolbar"
            android:text="SIGN UP"
            app:layout_constraintEnd_toEndOf="@+id/sign_up_about_me"
            app:layout_constraintStart_toStartOf="@+id/sign_up_about_me"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_about_me" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>